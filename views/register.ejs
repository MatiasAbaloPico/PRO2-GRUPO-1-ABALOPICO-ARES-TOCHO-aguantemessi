<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/rolexLogo.png" />

	<title>Rolex</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
	<link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="formulario">
				<div class="col-12">
					<h2 class="products-title">Registrate</h2>
				</div>
				<!-- Show the "ultimos" products -->

				<!-- acá empezamos las views de validar formularios -->

				<form action="/register" method="POST">
					<div class="formulario">
						<div class="input-group">
							<label for="mail">Email:</label>
							<input id="mail" type="email" name="mail" value="">
						</div>
						<div class="input-group">
							<label for="usuario">Nombre de Usuario:</label>
							<input id="usuario" type="text" name="usuario" value="">
						</div>
						<div class="input-group">
							<label for="nombre">Nombre: </label>
							<input id="nombre" type="text" name="nombre" value="">
						</div>
						<div class="input-group">
							<label for="apellido">Apellido:</label>
							<input id="apellido" type="text" name="apellido" value="">
						</div>
						<div class="input-group">
							<label for="contrasenia">Contraseña:</label>
							<input id="contrasenia" type="password" name="contrasenia" value="">
						</div>
						<div class="input-group">
							<label for="fechaNacimiento">Fecha de nacimiento:</label>
							<input id="fechaNacimiento" type="date" name="fechaNacimiento" value="">
						</div>
						<div class="input-group">
							<label for="dni">DNI:</label>
							<input id="dni" type="number" name="dni" value="">
						</div>
						<div class="input-group">
							<label for="foto">Foto de perfil:</label>
							<input id="foto" type="text" name="foto" value="">
						</div>
						<button type="submit">Enviar</button>
					</div>
				</form>
			</div>
		</div>


		<!-- footer -->
		<%- include("./partials/footer") %>
			<!-- /footer -->
</body>

</html>