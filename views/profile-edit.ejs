<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/rolexLogo.png" />

	<title>Rolex</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
	<link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	 <% } else { %>
		<%- include('./partials/header') %>
	<% } %>
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="formulario">
				<div class="col-12">
					<h2 class="products-title">Editar mi perfil</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<% if (locals.errors) {
					errors.forEach(error => { %>
					<p> <%= error.msg %> </p>
				<% })
					 } %>
				<form action="/profile-edit" method="POST">
					<div class="input-group">
						<label for="mail">Emali actual: <%= locals.user.mail %></label>
						<input id="mail" type="email" name="mail" value="">
					</div>
					<div class="input-group">
						<label for="usuario">Usuario actual: <%= locals.user.usuario %></label>
						<input id="usuario" type="text" name="usuario" value="">
					</div>
					<div class="input-group">
						<label for="contrasenia">Contrase√±a:</label>
						<input id="contrasenia" type="password" name="contrasenia" value="">
					</div>
					<div class="input-group">
						<label for="fecha_nac">Fecha de nacimiento:</label>
						<input id="fecha_nac" type="date" name="fecha_nac" value="">
					</div>
					<div class="input-group">
						<label for="dni">DNI:</label>
						<input id="dni" type="number" name="dni" value="">
					</div>
					<div class="input-group">
						<label for="pp">Foto de perfil: <%= locals.user.foto %></label>
						<input id="pp" type="text" name="img" value="">
					</div>
					<div class="input-group">
						<a href="/" class="volver_index">
							<button type="submit">Enviar</button>
						</a>
					</div>
				</form>
			</div>
		</div>


		<!-- footer -->
		<%- include("./partials/footer") %>
			<!-- /footer -->
</body>

</html>